<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user.img? %>                                                              
          <%= image_tag @user.img.url %>
        <% end %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>